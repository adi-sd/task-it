generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScheduleTypes {
    Today
    Tomorrow
    ThisWeek
}

model Task {
    id             String          @id @default(cuid())
    headline       String
    description    String
    isCompleted    Boolean
    schedule       ScheduleTypes   @default(Today)
    createdAt      DateTime
    lastModifiedAt DateTime?
}